pipeline {
    agent {
        kubernetes {
            defaultContainer 'default'
            yaml '''\
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            component: builder
            lang: python
            app: amqp-content-router
        spec:
          containers:
          - name: default
            image: python:3.7
            command:
            - cat
            tty: true
            imagePullPolicy: Always
        '''.stripIndent()
        }
    }
    options {
        timeout(time: 45, unit: 'MINUTES')
    }
    stages {
        stage('Checkout code'){
            steps {
                checkout scm
                sh 'ls -al'
            }
        }
    }
}
